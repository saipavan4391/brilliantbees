<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unity.purchasing.googleplay.test" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="9" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for com.unity.purchasing.googleplay.test"
        android:targetPackage="com.unity.purchasing.googleplay.test" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application android:allowBackup="true" >
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="com.unity.purchasing.googleplay.PurchaseActivity"
            android:configChanges="fontScale|keyboard|keyboardHidden|locale|mnc|mcc|navigation|orientation|screenLayout|screenSize|smallestScreenSize|uiMode|touchscreen"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" />
    </application>

</manifest>